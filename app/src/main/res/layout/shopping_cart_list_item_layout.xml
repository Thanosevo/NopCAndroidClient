<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="2dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imageView"
        android:layout_width="@dimen/cart_picture_width"
        android:layout_height="@dimen/cart_picture_height"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="@dimen/cart_right_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <org.fabiomsr.moneytextview.MoneyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:baseTextSize="25sp"
            app:symbol="â‚¬"
            app:symbolGravity="end|top"
            app:amount="0"
            app:decimalUnderline="false"
            app:decimalGravity="top"
            app:decimalDigitsTextSize="20sp"
            app:baseTextColor="@color/colorPrimary"
            android:id="@+id/moneyTextView"
            android:background="@color/transparentWhite"
            android:layout_marginBottom="5dp"/>
        <com.telerik.widget.numberpicker.RadNumberPicker
            android:id="@+id/number_picker"
            android:layout_width="@dimen/cart_picker_width"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_below="@id/imageView"
        android:id="@+id/recipeInfo">
        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical">
            <TextView
                android:textSize="19dp"
                android:textStyle="italic"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:maxLines="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subtitle"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>